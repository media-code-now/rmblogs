include ../counter/_counter

// Progress linear
section.section-md.bg-primary-light
	.container
		h2 Counters
		.row.row-30.row-offset-md
			.col-6.col-md-3
				+counter({
					value: '72',
					title: 'New Readers',
					iconClass: 'linearicons-umbrella'
				}).counter-bordered

			.col-6.col-md-3
				+counter({
					value: '87',
					title: 'Registered Visitors',
					iconClass: 'linearicons-file-check'
				}).counter-bordered

			.col-6.col-md-3
				+counter({
					value: '25',
					title: 'New Comments',
					iconClass: 'linearicons-bookmark2'
				}).counter-bordered

			.col-6.col-md-3
				+counter({
					value: '32',
					title: 'Submitted Publications',
					iconClass: 'linearicons-bubble-quote'
				}).counter-bordered

include ../logo/_logo
include ../rights/_rights
include ../countdown/_countdown

// Coming soon
section.section-xs.service-section.service-section-fullwidth.bg-image.context-dark.text-center( style='background-image: url(images/bg-coming-soon.jpg)' )
	.service-section-header
		.container
			+logo
	.service-section-body
		.container
			.row.row-30.row-xl-55.justify-content-center
				.col-md-10.col-lg-8
					h2 Coming Soon
					p.big Our website is under construction, we are working very hard to give you the best experience on our website. Subscribe to us to be notified of our launch.
					+countdown({ to: '2022-12-31' }).justify-content-center
				.col-md-10.col-lg-6
					form.form-inline.rd-mailform.rd-form.group-15.justify-content-center( data-form-output='form-coming-soon', data-form-type='subscribe', method='post', action='components/rd-mailform/rd-mailform.php' )
						.form-inline-group
							input.form-control( type='email', name='email', placeholder='Your E-mail*', data-constraints='@Email @Required' )
						button.btn Subscribe
					#form-coming-soon.form-output.snackbar.snackbar-primary
	.service-section-footer
		.container
			+rights

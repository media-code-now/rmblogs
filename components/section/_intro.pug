include ../blurb/_blurb

// Intro dotted
section.intro
	+rd-navbar
	.intro-inner.bg-primary-light( style='background-image: url( images/bg-intro.svg )' )
		.bg-decor-1.bg-default.d-none.d-lg-block
		.container.container-wide
			.row.justify-content-center.justify-content-lg-start
				.col-xxl-6.col-xl-7.col-lg-6.col-md-8.col-xs-10.offset-xxl-4.offset-xl-1.position-initial
					.position-relative
						h1.h1-big Essential Tips for Happiness and Productivity
						form.form-inline.rd-mailform.rd-form.group-y-10.align-items-stretch( data-form-output='form-footer-subscribe-intro', data-form-type='subscribe', method='post', action='components/rd-mailform/rd-mailform.php' )
							.form-inline-group
								input.form-control( type='email', name='email', placeholder='Enter Your E-mail', data-constraints='@Email @Required' )
							button.btn Subscribe
							#form-footer-subscribe-intro.form-output.snackbar.snackbar-primary
						p.text-dark Subscribe to my newsletter to get fresh articles.
					.box-member
						.box-member-content
							.box-member-text-top #[a.d-block( href='classic-blog.html' ) Check out] my latest articles.
							h3.box-member-title.h3-style-1: a( href= links.teamMember ) Moli Carter
							p.box-member-text Creative blogger <br> from the USA
						figure.box-member-figure
							a.link-image( href= links.teamMember ): +img( 'home-01-324x426' )
